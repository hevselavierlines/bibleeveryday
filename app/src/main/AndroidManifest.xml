<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.hevselavierlines.bibleeveryday">

    <application
        android:fullBackupContent="false"
        android:allowBackup="true"
        android:icon="@drawable/bible_appicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bible_appicon"
        android:supportsRtl="false"
        android:theme="@style/Theme.BibleEveryDay">
        <activity android:name=".StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".SelectionActivity"
            android:label="@string/title_activity_selection"
            android:theme="@style/Theme.BibleEveryDay.NoActionBar"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".BibleActivity"
            android:label="@string/title_activity_bible"
            android:theme="@style/Theme.BibleEveryDay.NoActionBar">
        </activity>
    </application>

</manifest>